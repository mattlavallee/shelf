{
    "name": "shelf",
    "version": "1.0.0",
    "description": "Simple web app to organize and search a local collection of ebooks and audiobooks",
    "main": "server/index.js",
    "scripts": {
        "clean": "rm -rf ./dist",
        "start": "node server/index.js",
        "build-server": "tsc",
        "build-app": "webpack --config webpack.config.js",
        "build-css": "node-sass --include-path scss app/shelf.scss dist/shelf.css",
        "copy": "npm run copy-index && npm run copy-images",
        "copy-images": "cp -r images dist/images",
        "copy-index": "cp app/index.hbs dist/index.hbs",
        "build": "npm run clean && npm run build-css && npm run build-server && npm run build-app && npm run copy",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "engines": {
        "node": "^8.9.1",
        "npm": "^5.5.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mattlavallee/shelf.git"
    },
    "keywords": [
        "shelf",
        "ebook",
        "audiobook"
    ],
    "author": "Matt Lavallee",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mattlavallee/shelf/issues"
    },
    "homepage": "https://github.com/mattlavallee/shelf#readme",
    "dependencies": {
        "@types/lodash": "^4.14.91",
        "@types/js-base64": "^2.3.1",
        "express": "^4.16.2",
        "express-easy-zip": "^1.1.4",
        "express-hbs": "^1.0.4",
        "body-parser": "^1.18.2",
        "glob": "^7.1.2",
        "js-base64": "^2.4.3",
        "lodash": "^4.17.4",
        "vue": "^2.5.13",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.0.39",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
        "babel-plugin-transform-object-assign": "^6.22.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-runtime": "^6.26.0",
        "css-loader": "^0.28.7",
        "eslint-loader": "^1.9.0",
        "file-loader": "^1.1.5",
        "node-sass": "^4.7.2",
        "ts-loader": "^3.1.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vue-loader": "^13.6.1",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^3.8.1"
    }
}
